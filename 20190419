#!/bin/bash

# write version
TO=20190425

# version check
CUR_VER=`cat /linux.prop | cut -c 24-31`

# change log
echo -e "20190419 to 20190425 update\n1. mpd : fix notworking problem.\n2. pure-ftpd : fix not logging problem.\n"
read -p "[alert] apply update for $CUR_VER? (y or n) : " INPUT
case $INPUT in
  y)
    # write update scipt
    mkdir /var/log/mpd
    mkdir /var/log/pure-ftpd
    ;;
  n)
    echo "[info] user aborted."
    ;;
  *)
    ;;
esac


# write script
mkdir /var/log/pure-ftpd
mkdir /var/log/mpd

# version management
echo "ro.build.version.linux=$TO.120000" > /linux.prop

# info message
echo "[update] update to $TO finished..."
